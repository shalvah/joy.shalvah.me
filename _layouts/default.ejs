<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta charset="utf-8">
    <link rel="icon" href="/img/favicon.ico"
          type="image/x-icon"/>
    <link rel="icon" href="/img/favicon-32x32.png"
          type="image/png"/>
    <link rel="icon" href="/img/favicon-16x16.png"
          type="image/png"/>
    <link rel="apple-touch-icon-precomposed" sizes="180x180"
          href="/img/apple-touch-icon.png">

    <!-- Primary Meta Tags -->
    <title><%= title %></title>
    <meta name="title" content="Things that bring me joy: <%= title %>">
    <meta name="description" content="">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="Things that bring me joy: <%= title %>">
    <meta property="og:description" content="">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary">
    <meta property="twitter:title" content="Things that bring me joy: <%= title %>">
    <meta property="twitter:description" content="">

    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', Calibri, sans-serif;
        padding: 30px 50px;
        display: flex;
        flex-direction: column;
        font-size: 1.4em;
        background: #15292B;
        color: whitesmoke;
        line-height: 1.6;
      }

      a {
        color: #b9b93b;
        text-decoration: none;
      }

      a:hover, a:visited, a:focus {
        color: yellowgreen;
      }

      a:hover, a:focus {
        text-decoration: underline;
      }

      .muted {
        opacity: 0.6;
      }

      li {
        margin-bottom: 0.3em;
      }
    </style>

    <title><%= title %></title>
  </head>
  <body>
    <%- content %>
  </body>
</html>